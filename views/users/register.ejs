<% layout("../layouts/boilerplate") %>

  <body>
    <h1 class="display-2 text-center"> Register!!!</h1>
    <form action="/register" method="POST" class="needs-validation" novalidate>
      <div class="container w-75 m-auto">
        <div class="form-group">
          <label for="username" class=>Username</label>
          <input type="text" class="form-control" id="username" name="User[username]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            The username looks invalid or it is already taken.
          </div>
        </div>

        <div class="form-group">
          <label for="email" class=>Email</label>
          <input type="email" class="form-control" id="email" name="User[email]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            The email looks invalid or it is already taken.
          </div>
        </div>

        <div class="form-group">
          <label for="password" class=>Password</label>
          <input type="password" class="form-control" id="password" name="User[password]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid password.
          </div>
        </div>

        <div>
          <button type="submit" class="btn  mb-5 btn-block btn-success">Register</button>
        </div>
      </div>
  </body>

  </html>