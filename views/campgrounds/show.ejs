<% layout("../layouts/boilerplate") %>
  <div class="row mt-3 mb-3">
    <div class="col">
      <div class="card">
        <img src="<%= campground.image %>" class="card-img-top" alt="Imgcampground">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.name %>
          </h5>
          <p class="card-text">
            <%= campground.description %>.
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= campground.price %> $
          </li>
          <li class="list-group-item text-muted">
            <%= campground.location %>
          </li>
          <li class="list-group-item text-muted">
            Submitted by <%= campground.author.username%>
          </li>
        </ul>

        <% if( currentUser && campground.author.equals(currentUser)){%>
          <div class="card-body">
            <div class="row">
              <div class="col d-flex justify-content-end">
                <a href="/campgrounds/<%= campground._id %>/edit" class="m-1 btn btn-info ">Edit</a>
              </div>
              <div class="col">
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post" class="form-inline">
                  <button class="btn btn-danger m-1 ">Delete</button>
              </div>
            </div>
            </form>
          </div>
          <% } %>
      </div>
    </div>
    <% if(currentUser){ %>
      <div class="col">
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="needs-validation" novalidate>
          <div class="card">
            <h4 class="card-header">Add a Review</h4>
            <div class="card-body">
              <div class="form-group">
                <label for="customRange3">
                  <h5 class="card-title">Rating:-</h5>
                </label>
                <input type="range" class="custom-range" min="0" max="5" step="0.5" name="Review[rating]"
                  id="customRange3" oninput="this.nextElementSibling.value = this.value">
                <output class="mb-3">2.5</output>
              </div>
              <div class="form-group">
                <h5 class="card-title">
                  <label for="review">
                    Review:-
                  </label>
                </h5>
                <textarea name="Review[body]" id="review" cols="30" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Please provide a valid review.
                </div>
                <br>
                <button type="submit" class="btn btn-primary ">Create a Review</button>
              </div>
            </div>
          </div>
        </form>
        <% } %>
          <div class="card mt-4">
            <h4 class="card-header">
              All Reviews
            </h4>
            <% for(let review of campground.reviews) { %>
              <div class="card-body">
                <h6 class="card-title">Rating:- <%= review.rating %>
                </h6>
                <p class="card-text">Review:- <%= review.body %>
                </p>
                <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %>
                </h6>
                <% if(currentUser && currentUser.equals(review.author)){%>
                  <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                  </form>
                  <% } %>
              </div>
              <hr>
              <% } %>
          </div>
      </div>
  </div>