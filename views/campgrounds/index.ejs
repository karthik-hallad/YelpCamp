<% layout("../layouts/boilerplate") %>
  <h1 class='display-3 text-center'>Viewing all the Campgrounds</h1>
  <div id="map" class="mt-3 mb-3 rounded" style="width: 100%; height: 400px;"></div>

  <% for( let campground of Campgrounds ) { %>
    <div class="card mb-3">
      <div class="row">
        <% if(campground.images){ %>
          <div class="col-md-4">
            <img class="img-fluid" src="<%=campground.images[0].url%>" alt="campground image">
          </div>
          <% } %>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= campground.name %>
                </h5>
                <p class="card-text">
                  <%= campground.description %>
                </p>
                <p class="card-text">
                  <small class="text-muted">
                    <%= campground.location %>
                  </small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%= campground.title %></a>
              </div>
            </div>
      </div>
    </div>
    <% } %>

      <script>
        const mapbox = '<%- process.env.MAPBOX_ACCESS_TOKEN %>'
        const campgrounds = { features: ( <%-JSON.stringify(Campgrounds) %>)}

      </script>
